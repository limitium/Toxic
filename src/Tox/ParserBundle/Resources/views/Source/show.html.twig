{% extends 'ToxParserBundle:Source:source.html.twig' %}

{% block source %}
<h1>Source edit</h1>
<ul class="record_actions">
    <li>
        <a href="{{ path('source') }}">‚Üê</a>
    </li>
    <li>
        <a href="{{ path('source_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('source_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
<h4>{{ entity.name }}</h4>
<a class="ext_url" href="{{ entity.url }}">{{ entity.url }}</a>
<div class="schedule">
    Refresh: {{ entity.getSchedule() }}
</div>
<div class="patterns">
    Patterns:
    <ul>
        {% for rule in entity.Rules %}
        <li>{{ rule.getType().name }} - {{ rule.pattern }}</li>
        {% endfor %}
    </ul>
</div>
        {% endblock %}