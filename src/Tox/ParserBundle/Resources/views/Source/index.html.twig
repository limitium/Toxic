{% extends 'ToxParserBundle:Source:source.html.twig' %}

{% block source %}
<h1>Source list</h1>
<ul class="record_actions">
    <li>
        <a href="{{ path('source_new') }}">
            Create a new source
        </a>
    </li>
</ul>
<table class="records_list">
    <thead>
    <tr>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    <tr>
        <td><a href="{{ path('source_show', { 'id': entity.id }) }}">{{ entity.name }} ({{ entity.url }})</a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>


        {% endblock %}