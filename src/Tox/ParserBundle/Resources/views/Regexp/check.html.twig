{% extends 'ToxParserBundle:Regexp:new.html.twig' %}
{% block content %}
{{ parent() }}

{% if task is defined %}
<div class="highlight">
    <pre>
        <a href="{{ task.getUrl() }}">{{ task.getUrl() }}</a>
        {% if task.result is defined %}
        <ul>
            {% for a in task.result %}
            <li>{{ loop.index }} {{ a|raw }}</li>
            {% endfor %}
        </ul>
        {% endif %}
    </pre>
</div>
{% endif %}

{% endblock %}
