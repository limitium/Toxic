{% extends 'ToxSatelliteBundle:Satellite:satellite.html.twig' %}

{% block satellite %}
<h1>Satellite</h1>
<ul class="record_actions">
    <li>
        <a href="{{ path('satellite') }}">‚Üê</a>
    </li>
    <li>
        <a href="{{ path('satellite_edit', { 'id': satellite.id }) }}">
            Edit
        </a>
    </li>
</ul>
<h4><a class="ext_url" href="http://{{ satellite.getDomen().getName() }}">{{ satellite.getDomen().getName()}}</a></h4>
<div>
    Host:
    <a href="{{ path('ftpaccount_show', { 'id': satellite.getFtpAccount().getId() }) }}">{{ satellite.getFtpAccount().getUsername() }}</a>
    <a href="{{ path('host_show', { 'id': satellite.getFtpAccount().getHostAccount().getHost().getId() }) }}">{{ satellite.getFtpAccount().getHostAccount().getHost().getUrl() }}</a>
</div>
<div>
    Register:
    <a href="{{ path('domen_show', { 'id': satellite.getDomen().getId() }) }}">{{ satellite.getDomen().getName() }}</a>
    <a href="{{ path('register_show', { 'id': satellite.getDomen().getRegisterAccount().getRegister().getId() }) }}">{{ satellite.getDomen().getRegisterAccount().getRegister().getUrl() }}</a>
</div>
<div>
    title: {{ satellite.getTitle() }}
</div>
<div>
    description: {{ satellite.getDescription() }}
</div>
<div>
    keys: {{ satellite.getKeyz() }}
</div>
<div>
    about: {{ satellite.getAbout() }}
</div>
<div>
    key: {{ satellite.getMark() }}
</div>
        {% endblock %}