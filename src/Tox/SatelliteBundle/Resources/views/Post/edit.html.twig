{% extends 'ToxSatelliteBundle:Post:post.html.twig' %}

{% block post %}
<h1>Post edit</h1>

{% include 'ToxSatelliteBundle:Post:form.html.twig' with {'form': form } %}

<ul class="record_actions">
    <li>
        <a href="{{ path('post') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('post_delete', { 'id': post.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
        {% endblock %}