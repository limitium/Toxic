{% extends 'ToxPlaceBundle:Domen:domen.html.twig' %}

{% block domen %}
<h1>Domen list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Paid_unitl</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{% spaceless %}
                {% if entity.Satellite %}
                *
                {% else %}
                -
                {% endif %}
                {% endspaceless %}{{ entity.name }}</td>
            <td>{% if entity.paidunitl %}{{ entity.paidunitl|date('Y:m:d') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('domen_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('domen_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('domen_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
        {% endblock %}