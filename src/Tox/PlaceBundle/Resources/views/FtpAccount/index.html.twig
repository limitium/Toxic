{% extends 'ToxPlaceBundle:FtpAccount:ftpaccount.html.twig' %}

{% block ftpaccount %}
<h1>FtpAccount list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Password</th>
            <th>Url</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('ftpaccount_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.password }}</td>
            <td>{{ entity.url }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('ftpaccount_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ftpaccount_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('ftpaccount_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
        {% endblock %}