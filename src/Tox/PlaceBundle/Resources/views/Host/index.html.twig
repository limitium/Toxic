{% extends 'ToxPlaceBundle:Host:host.html.twig' %}

{% block host %}
<h1>Host list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.url }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('host_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('host_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('host_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
        {% endblock %}